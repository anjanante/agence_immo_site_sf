{% extends 'base.html.twig' %}

{% block title %}{{ property.title }}{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {% for  message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    Please fix the fields
                </div>
            {% endif %}
            <div class="row">
                <div class="col-md-8">
                {% if property.filename %}
                    <img class="card-img-top" src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium') }}" alt="{{ property.title }}">
                {% else %}
                    <img class="card-img-top" src="https://picsum.photos/id/405/800/450" alt="{{ property.title }}">
                {% endif %}
                </div>
                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} rooms - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-weight: bold;font-size: 4rem">{{ property.formatedPrice }} Ar</div>
                    <div class="btn btn-primary">Contact us</div>
                    <div id="contact-form" class="mt-4">
                        {{ form_start(form)}}
                        <div class="row">
                            <div class="col">{{ form_row(form.firstname)}}</div>
                            <div class="col">{{ form_row(form.lastname)}}</div>
                        </div>
                        <div class="row">
                            <div class="col">{{ form_row(form.phone)}}</div>
                            <div class="col">{{ form_row(form.email)}}</div>
                        </div>
                        {{ form_rest(form)}}
                        <div class="form-group">
                            <button class="btn btn-primary">Send</button>
                        </div>
                        {{ form_end(form)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>
        <div class="row">
            <div class="col-md-8">
                <h2>Features</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Living space</td>
                        <td>{{ property.surface }} m² </td>
                    </tr>
                    <tr>
                        <td>Rooms</td>
                        <td>{{ property.rooms }} </td>
                    </tr>
                    <tr>
                        <td>BedRooms</td>
                        <td>{{ property.bedrooms }} </td>
                    </tr>
                    <tr>
                        <td>Floor</td>
                        <td>{{ property.floor }} </td>
                    </tr>
                    <tr>
                        <td>Heat</td>
                        <td>{{ property.heatType }} </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Specificities</h2>
                <ul class="list-group">
                    {% for option in property.options %}
                    <li class="list-group-item">{{ option.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
