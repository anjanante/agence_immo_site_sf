<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('app_properties.show', {id: property.id, slug:property.slug}) }}">
                {{ property.title }}
            </a>
        </h5>
        <div class="card-text">{{ property.description | nl2br }}</div>
        <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-weight: bold;font-size: 2rem">{{ property.formatedPrice }} Ar</div>
    </div>
</div>
