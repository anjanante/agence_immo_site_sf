{% extends 'base.html.twig' %}

{% block title %}See all properties{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Here is all of our properties</h1>

    <div class="row">
        {% for property in properties  %}
            <div class="col-md-4">
                {{ include ('property/__property.html.twig') }}
            </div>
        {% endfor %}
    </div>
    <div class="pagination">
        {{ knp_pagination_render(properties) }}
    </div>
</div>
{% endblock %}
