{% extends 'base.html.twig' %}

{% block title %}See all properties{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        {{ form_start(form)}}
            <div class="form-row align-items-end">
                <div class="col">
                    {{form_row(form.minSurface)}}
                </div>
                <div class="col">
                    {{form_row(form.maxPrice)}}
                </div>
                <div class="col">
                    {{form_row(form.options)}}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
        {{form_rest(form)}}
        {{form_end(form)}}
    </div>
</div>
<div class="container mt-4">
    <h1>Here is all of our properties</h1>

    <div class="row">
        {% for property in properties  %}
            <div class="col-md-4">
                {{ include ('property/__property.html.twig') }}
            </div>
        {% endfor %}
    </div>
    <div class="pagination">
        {{ knp_pagination_render(properties) }}
    </div>
</div>
{% endblock %}
